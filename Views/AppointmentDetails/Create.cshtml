@model SD1_sk072215_MIS4200.Models.AppointmentDetail

@{
    ViewBag.Title = "Invoice Summary";
}

    <h2>Invoice Summary</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
